{
  "version": 2,
  "builds": [
    {
      "src": "project_core/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "3.10.6" },
      "cmd": "pip install -r requirements.txt && python manage.py collectstatic --noinput"
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "project_core/wsgi.py" }
  ]
}
